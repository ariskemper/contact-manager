{
	"$schema": "http://json.schemastore.org/tsconfig",
	"include": [
		"src/**/*",
		"test/**/*"
	],
	"exclude": [
		"dist",
		"node_modules"
	],
	"typeRoots": [
		"node_modules/@types"
	],
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"strict": false,
		"lib": [
			"es2018"
		],
		"module": "commonjs",
		"target": "es2017",
		"declaration": false,
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "dist",
		"importHelpers": true,
		"noUnusedLocals": false,
		"esModuleInterop": true,
		"noUnusedParameters": false
	}
}